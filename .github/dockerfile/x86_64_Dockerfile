FROM ubuntu:20.04

USER root
ARG ARCH=x86_64

ENV TZ=Asia/Shanghai \
    DEBIAN_FRONTEND=noninteractive

RUN apt update \
    && apt install -y tzdata \
    && ln -fs /usr/share/zoneinfo/${TZ} /etc/localtime \
    && echo ${TZ} > /etc/timezone \
    && dpkg-reconfigure --frontend noninteractive tzdata \
    && rm -rf /var/lib/apt/lists/*

RUN apt-get -y update && apt-get -y install \
	sudo pkg-config git gcc openssl libssl-dev alien unzip python python3 python3-pip wget curl

RUN apt-get -y install gcc g++ cmake

RUN apt-get update && apt-get install -y \
    sudo pkg-config ninja-build \
    libgrpc++-dev libgrpc-dev grpc-proto \
    protobuf-compiler libprotobuf-dev libprotoc-dev \
    thrift-compiler libthrift-dev \
    libboost-all-dev

COPY ./cross-install.sh /library/
RUN /library/cross-install.sh -a $ARCH -v x86_64-linux-gnu -c true
